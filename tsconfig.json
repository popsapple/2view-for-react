{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@src/*":["src/*"],
      "@assets/*":["src/assets/*"],
      "@util/*":["src/util/*"],
      "@component/*":["src/component/*"],
      "@student/*":["src/student/*"],
      "@teacher/*":["src/teacher/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./"
  },
  "types": [
    "node",
    "vite/client",
    "types/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "node_modules",
    "types"
  ],
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
